
@{
    ViewBag.Title = "agregar";
    if (Session["codeU"] == null || Session["nameU"] == null)
    {
        Response.Redirect("~/MODINI_Login/vMODINI_Login");
    }
}

<br /><br />
<h1>Agregar Usuario</h1>
<br /><br />
@using (Html.BeginForm("agregar_usuario", "MODUSR", FormMethod.Post))
{
<div class="form-group">
    <label for="dpi">DPI:</label>
    <input type="text" class="form-control" name=dpi id="dpi">

    <label for="apellido">Apellido:</label>
    <input type="text" class="form-control" name=apellido id="apellido" required>
    
    <label for="codUsuario">Código:</label>
    <input type="text" class="form-control" name=codUsuario id="codUsuario" required>

    <label for="password">Contraseña:</label>
    <input type="text" class="form-control" name=password id="password" required>
</div>
    <input id="btn" name="btn" type="submit" value="Agregar" class="btn btn-primary" />
    <br /><br />
}
<a href="@Url.Action("index", "MODUSR")" class="btn  btn-warning" id="agregar">Regresar</a>
