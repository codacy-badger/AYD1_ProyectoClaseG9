@{
    ViewBag.Title = "Ingresos";
    if (Session["codeU"] == null || Session["nameU"] == null)
    {
        Response.Redirect("~/MODINI_Login/vMODINI_Login");
    }
}

<div class="jumbotron">
    <h1>Ingresos</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Devoluciones</h2>
        <p>
            @Html.ActionLink("Nueva Devolución", "Devoluciones", "MODING", new { area = "" }, new { @class = "btn btn-primary" })
        </p>
    </div>
    <div class="col-md-4">
        <h2>Compras</h2>
        <p>
            @Html.ActionLink("Nueva Compra", "Compras", "MODING", new { area = "" }, new { @class = "btn btn-primary" })
        </p>
    </div>
    <div class="col-md-4">
        <h2>Muestras</h2>
        <p>
            @Html.ActionLink("Nueva Compra", "Muestras", "MODING", new { area = "" }, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>
<br /><br />
<a href="@Url.Action("vMODINI_Logeado", "MODINI_Logeado")" class="btn  btn-warning" id="regresar">Regresar</a>
