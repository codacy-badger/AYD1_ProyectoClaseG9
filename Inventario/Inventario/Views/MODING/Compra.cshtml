@model List<Inventario.Objetos.ObjDetMovimiento>
@{
    ViewBag.Title = "Ingresos";
}
<hr />
@Html.ActionLink("Regresar", "Compras", "MODING", new { area = "" }, new { @class = "btn btn-primary" })
<h1>Codigo de compra: @ViewBag.compra</h1>
<div class="row">
    @using (Html.BeginForm("insertarDetalle", "MODING", FormMethod.Post, new { @class = "frm" }))
    {
        <div class="form-group">
            <label for="cantidad" class="sr-only">Producto</label>
            <input type="number" class="form-control" name="producto" placeholder="Producto" />
        </div>
        <div class="form-group">
            <label for="cantidad" class="sr-only">Cantidad</label>
            <input type="number" class="form-control" name="cantidad" placeholder="Cantidad" />
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" name="movimiento" placeholder="Movimiento" value="@ViewBag.compra" />
            <input type="hidden" class="form-control" name="modulo" value="2" />
        </div>

        <input type="submit" name="btnIngresarDevolucion" value="Ingresar" class="btn btn-primary" />
    }
    <div class="col-md-12 devolucion-ingreso">
        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            @foreach (var detalle in Model)
            {
                <tr>
                    <td>@detalle.producto_idproducto</td>
                    <td>@detalle.descripcion</td>
                    <td>@detalle.cantidad</td>
                </tr>
            }
        </table>
    </div>
</div>
